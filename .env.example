# AI Video Editor Environment Configuration
# Copy this file to .env and add your actual API keys

# OpenAI API Key (required for GPT analysis)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Flask Configuration
SECRET_KEY=your_secret_key_for_production
FLASK_ENV=development

# Optional: Custom OpenAI base URL (for alternative endpoints)
# OPENAI_BASE_URL=https://api.openai.com/v1

# Optional: Default settings
DEFAULT_WHISPER_MODEL=base
DEFAULT_SILENCE_THRESHOLD=0.04
DEFAULT_MARGIN=0.2

# Optional: Output settings
DEFAULT_OUTPUT_DIR=./static/outputs
GENERATE_SUBTITLES=true
KEEP_TEMP_FILES=false

# Optional: Web server settings
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=true
